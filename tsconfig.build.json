{
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,

        "declaration": true,
        "declarationMap": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "skipLibCheck": true,

        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        // compiled code js version
        "target": "ES2022",

        "moduleResolution": "bundler",
        // compiled code format (esm/cjs)
        "module": "ESNext"
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
