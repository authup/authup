{
    "name": "@authup/server-core",
    "type": "module",
    "version": "1.0.0-beta.27",
    "description": "This is a standalone application.",
    "license": "Apache-2.0",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "debug": "node --inspect dist/cli/index.js start",
        "cli": "node dist/cli/index.js",
        "cli-dev": "npm run build:server && npm run cli",
        "cli-dev-src": "nodemon --watch src --exec \"npm run build:server && node dist/cli/index.js\"",
        "cli-dev-dist": "nodemon --watch dist --exec \"node dist/cli/index.js\"",
        "build:client": "npm run build --workspace=../client-web-slim",
        "build:server:types": "tsc --emitDeclarationOnly -p tsconfig.build.json",
        "build:server:js": "rollup -c",
        "build:server": "rimraf ./dist && cross-env NODE_ENV=production tsc -p tsconfig.build.json",
        "build:swagger": "npm run cli -- swagger generate",
        "build": "npm run build:client && npm run build:server && npm run build:swagger",
        "test": "cross-env NODE_ENV=test vitest run --config test/vitest.config.ts",
        "test:coverage": "cross-env NODE_ENV=test vitest run --config test/vitest.config.ts --coverage"
    },
    "engines": {
        "node": "^20.19.0 || ^22.13.0 || ^23.5.0 || >=24.0.0"
    },
    "bin": {
        "authup-server": "dist/cli/index.js"
    },
    "keywords": [
        "auth",
        "module",
        "server",
        "typescript",
        "oauth2",
        "oauth2-client",
        "middleware",
        "key-pair",
        "password",
        "token"
    ],
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/authup/authup.git",
        "directory": "packages/server-core"
    },
    "bugs": {
        "url": "https://github.com/authup/authup/issues"
    },
    "homepage": "https://github.com/authup/authup#readme",
    "dependencies": {
        "@authup/access": "^1.0.0-beta.27",
        "@authup/kit": "^1.0.0-beta.27",
        "@authup/core-kit": "^1.0.0-beta.27",
        "@authup/core-http-kit": "^1.0.0-beta.27",
        "@authup/errors": "^1.0.0-beta.27",
        "@authup/server-kit": "^1.0.0-beta.27",
        "@authup/specs": "^1.0.0-beta.27",
        "@ebec/http": "^2.3.0",
        "@hapic/oauth2": "^3.1.2",
        "@routup/assets": "^3.4.2",
        "@routup/basic": "^1.4.3",
        "@routup/decorators": "^3.4.3",
        "@routup/prometheus": "^2.4.2",
        "@routup/rate-limit": "^2.4.2",
        "@routup/swagger": "^2.4.3",
        "@validup/adapter-routup": "^0.1.11",
        "@validup/adapter-validator": "^0.2.2",
        "@validup/adapter-zod": "^0.1.12",
        "better-sqlite3": "^12.5.0",
        "citty": "^0.1.6",
        "confinity": "^1.0.0-beta.1",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "dycraft": "^1.1.0",
        "envix": "^1.5.0",
        "hapic": "^2.5.1",
        "ldapjs": "^3.0.7",
        "locter": "^2.2.1",
        "morgan": "^1.10.1",
        "mysql2": "^3.16.0",
        "node-cron": "^4.2.1",
        "nodemailer": "^7.0.12",
        "pg": "^8.16.2",
        "reflect-metadata": "^0.2.2",
        "routup": "^4.0.0",
        "smob": "^1.5.0",
        "singa": "^1.1.0",
        "tsyringe": "^4.10.0",
        "typeorm": "^0.3.28",
        "typeorm-extension": "^3.7.3",
        "uncrypto": "^0.1.3",
        "validup": "^0.1.9",
        "zod": "^4.2.1"
    },
    "devDependencies": {
        "@authup/client-web-slim": "^1.0.0-beta.27",
        "@types/cors": "^2.8.19",
        "@types/ldapjs": "^3.0.6",
        "@types/morgan": "^1.9.10",
        "@types/supertest": "^6.0.3",
        "@faker-js/faker": "^10.1.0",
        "@vitejs/plugin-vue": "^6.0.3",
        "nodemon": "^3.1.11",
        "unplugin-swc": "^1.5.9",
        "jest-serial-runner": "^1.2.1",
        "supertest": "^7.1.4",
        "testcontainers": "^11.10.0",
        "ts-node": "^10.8.2",
        "vite": "^7.3.0",
        "vitest": "^4.0.14"
    },
    "publishConfig": {
        "access": "public"
    }
}
