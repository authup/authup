{
    "extends": "../../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./dist",
        "lib": [
            "ESNext"
        ],
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "module": "ESNext",
        "jsx": "preserve",

        "preserveValueImports": true,
        "resolveJsonModule": true,
        "useDefineForClassFields": true,
        "isolatedModules": true,
        "importsNotUsedAsValues": "error"
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "types/**/*.d.ts",
        "src/**/*.ts"
    ]
}
