{
    "name": "@authup/server-kit",
    "type": "module",
    "version": "1.0.0-beta.28",
    "description": "A toolkit for server-side services.",
    "license": "Apache-2.0",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs"
        }
    },
    "main": "./dist/index.mjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build:types": "tsc --emitDeclarationOnly -p tsconfig.build.json",
        "build:js": "rollup -c",
        "build": "rimraf ./dist && cross-env NODE_ENV=production npm run build:js && npm run build:types",
        "test": "cross-env NODE_ENV=test vitest run test/unit",
        "test:coverage": "cross-env NODE_ENV=test vitest run --coverage"
    },
    "engines": {
        "node": "^20.19.0 || ^22.13.0 || ^23.5.0 || >=24.0.0"
    },
    "keywords": [
        "auth",
        "kit",
        "utils",
        "jwt",
        "token",
        "sign",
        "verify",
        "password",
        "hash",
        "crypto"
    ],
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://github.com/tada5hi"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/authup/authup.git",
        "directory": "packages/server-kit"
    },
    "bugs": {
        "url": "https://github.com/authup/authup/issues"
    },
    "homepage": "https://github.com/authup/authup#readme",
    "dependencies": {
        "@hapic/vault": "^2.3.10",
        "@isaacs/ttlcache": "^2.1.4",
        "@node-rs/bcrypt": "^1.10.7",
        "@node-rs/jsonwebtoken": "^0.5.9",
        "@socket.io/redis-emitter": "^5.1.0",
        "@types/nodemailer": "^7.0.5",
        "locter": "^2.2.1",
        "uncrypto": "^0.1.3",
        "redis-extension": "^2.0.4",
        "smob": "^1.5.0",
        "singa": "^1.1.0",
        "winston": "^3.19.0"
    },
    "devDependencies": {
        "@authup/core-realtime-kit": "^1.0.0-beta.28",
        "@authup/kit": "^1.0.0-beta.28",
        "@authup/errors": "^1.0.0-beta.28",
        "@authup/specs": "^1.0.0-beta.28",
        "vitest": "^4.0.14"
    },
    "peerDependencies": {
        "@authup/core-realtime-kit": "^1.0.0-beta.28",
        "@authup/kit": "^1.0.0-beta.28",
        "@authup/errors": "^1.0.0-beta.28",
        "@authup/specs": "^1.0.0-beta.28"
    },
    "publishConfig": {
        "access": "public"
    }
}
