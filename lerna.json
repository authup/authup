{
    "packages": [
        "packages/docs",
        "packages/backend/*",
        "packages/shared/*",
        "packages/frontend/*"
    ],
    "command": {
        "publish": {
            "ignoreChanges": [
                "*.md"
            ]
        }
    },
    "useNx": false,
    "useWorkspaces": true,
    "conventionalCommits": true,
    "version": "independent",
    "changelog": {
        "labels": {
            "build": "Build",
            "ci": "Continuous Integration",
            "docs": "Documentation",
            "feat": "New Feature",
            "fix": "Bug Fix",
            "perf": "Performance",
            "refactor": "Refactor",
            "revert": "Revert",
            "style": "Style",
            "test": "Test"
        }
    }
}
